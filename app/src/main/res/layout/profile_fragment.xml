    <com.jackandphantom.carouselrecyclerview.CarouselRecyclerview
        android:id="@+id/profile_rv"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="32dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/relative_layout1" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_constraintTop_toBottomOf="@id/profile_rv"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginTop="20dp">

        <TextView
            android:id="@+id/tvText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:fontFamily="@font/aclonica"
            android:text="@string/moods_chart"
            android:textColor="#A7D5C2" />

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_centerVertical="true"
            android:layout_marginStart="16dp"
            android:layout_toStartOf="@id/tvText"
            android:background="#BBDACD" />

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_centerVertical="true"
            android:layout_marginEnd="16dp"
            android:layout_toEndOf="@id/tvText"
            android:background="#BBDACD" />

    </RelativeLayout>

    <app.futured.donut.DonutProgressView
        android:id="@+id/donut_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="64dp"
        android:layout_marginTop="20dp"
        app:donut_animateChanges="true"
        app:donut_animationDuration="1000"
        app:donut_animationInterpolator="@android:interpolator/decelerate_quint"
        app:donut_cap="6"
        app:donut_direction="anticlockwise"
        app:donut_gapAngle="270"
        app:donut_gapWidth="60"
        app:donut_strokeCap="round"
        app:donut_strokeWidth="14dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/profile_rv" />

    <TextView
        android:layout_width="50dp"
        android:layout_height="150dp"
        android:layout_marginStart="180dp"
        android:text=""
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/donut_view" />

