    <antonkozyriatskyi.circularprogressindicator.CircularProgressIndicator
        android:id="@+id/circular_progress"
        android:layout_width="129dp"
        android:layout_height="133dp"
        android:layout_gravity="center"
        android:layout_marginTop="24dp"
        app:direction="clockwise"
        app:dotColor="@color/white"
        app:dotWidth="16dp"
        app:drawDot="true"
        android:visibility="invisible"
        app:enableProgressAnimation="true"
        app:fillBackground="false"
        app:gradientEndColor="@color/purple_700"
        app:gradientType="linear"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:progressBackgroundColor="@color/gray"
        app:progressBackgroundStrokeWidth="8dp"
        app:progressCap="round"
        app:progressColor="@color/pink"
        app:progressStrokeWidth="8dp"
        app:startAngle="270"
        app:textColor="@color/white"/>

    <ImageView
        android:id="@+id/selected_mood_iv"
        android:layout_width="84dp"
        android:layout_height="78dp"
        android:layout_gravity="center"
        android:layout_marginTop="24dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@id/circular_progress" />


    <androidx.cardview.widget.CardView
        android:id="@+id/location_card_view"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_marginStart="60dp"
        android:layout_marginBottom="65dp"
        app:cardCornerRadius="20dp"
        app:cardElevation="3dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/pic_card_view"
        app:layout_constraintVertical_bias="0.692">

        <ImageButton
            android:id="@+id/location_btn"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_gravity="center"
            android:background="@drawable/ic_baseline_map_24"
            android:backgroundTint="#A7D5C2" />

    </androidx.cardview.widget.CardView>


    <TextView
        android:id="@+id/lat_lang_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="11sp"
        android:layout_marginStart="5dp"
        android:layout_marginBottom="90dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toEndOf="@+id/location_card_view" />

    <androidx.cardview.widget.CardView
        android:id="@+id/add_card_view"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_marginEnd="60dp"
        android:layout_marginBottom="70dp"
        app:cardCornerRadius="20dp"
        app:cardElevation="3dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/meme_card_view"
        app:layout_constraintVertical_bias="0.692">

        <ImageButton
            android:id="@+id/add_mood"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_gravity="center"
            android:background="@drawable/ic_baseline_post_add_24"
            android:backgroundTint="#A7D5C2" />

    </androidx.cardview.widget.CardView>

    <com.google.android.material.card.MaterialCardView
        android:id="@+id/meme_card_view"
        android:layout_width="140dp"
        android:layout_height="140dp"
        android:layout_marginEnd="30dp"
        android:layout_marginBottom="100dp"
        app:cardElevation="3dp"
        app:cardCornerRadius="20dp"
        app:strokeWidth="2dp"
        app:strokeColor="@color/orange"
        app:layout_constraintTop_toBottomOf="@id/note_card_view"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent">

        <ImageButton
            android:layout_width="40sp"
            android:layout_height="40sp"
            android:layout_gravity="center"
            android:background="@drawable/ic_baseline_add_reaction_24" />

        <ImageView
            android:id="@+id/meme_picker_iv"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scaleType="centerCrop" />

    </com.google.android.material.card.MaterialCardView>

    <com.google.android.material.card.MaterialCardView
        android:id="@+id/pic_card_view"
        android:layout_width="140dp"
        android:layout_height="140dp"
        android:layout_marginStart="30dp"
        android:layout_marginBottom="100dp"
        app:cardElevation="3dp"
        app:cardCornerRadius="20dp"
        app:strokeWidth="2dp"
        app:strokeColor="@color/orange"
        app:layout_constraintTop_toBottomOf="@id/note_card_view"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintBottom_toBottomOf="parent">

        <ImageButton
            android:id="@+id/take_pic_btn"
            android:layout_width="40sp"
            android:layout_height="40sp"
            android:layout_gravity="center"
            android:background="@drawable/ic_baseline_add_a_photo_24" />

        <ImageView
            android:id="@+id/pic_image_view"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scaleType="centerCrop" />

    </com.google.android.material.card.MaterialCardView>

    <com.google.android.material.switchmaterial.SwitchMaterial
        android:id="@+id/pic_switch"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="52dp"
        android:layout_marginBottom="12dp"
        android:textColor="@color/black"
        android:textOff="@string/public_pic"
        android:textOn="@string/private_pic"
        app:layout_constraintBottom_toTopOf="@id/pic_card_view"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/note_card_view"
        app:layout_constraintVertical_bias="0.0"
        app:showText="true" />

    <com.google.android.material.card.MaterialCardView
        android:id="@+id/note_card_view"
        android:layout_width="300dp"
        android:layout_height="200dp"
        android:layout_marginTop="64dp"
        app:cardCornerRadius="20dp"
        app:strokeColor="@color/orange"
        app:strokeWidth="2dp"
        app:cardElevation="3dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.468"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/selected_mood_iv">

        <EditText
            android:id="@+id/note_et"
            android:layout_width="270dp"
            android:layout_height="170dp"
            android:layout_marginStart="20dp"
            android:layout_marginTop="20dp"
            android:background="@null"
            android:ems="10"
            android:gravity="start|top"
            android:hint="@string/your_note"
            android:inputType="textMultiLine" />

        <TextView
            android:id="@+id/note_boundary"
            android:layout_width="300dp"
            android:layout_height="200dp"

            />

    </com.google.android.material.card.MaterialCardView>



</androidx.constraintlayout.widget.ConstraintLayout>