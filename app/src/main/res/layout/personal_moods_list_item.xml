<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="300dp"
    android:layout_height="300dp"
    android:layout_gravity="center"
    android:padding="10sp"
    android:layout_margin="10sp">

    <androidx.cardview.widget.CardView
        android:id="@+id/card_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="28dp"
        app:cardCornerRadius="20dp"
        app:cardElevation="10dp"
        app:cardUseCompatPadding="true"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.399"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/constraint_layout_3"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:animateLayoutChanges="true">

            <ImageView
                android:id="@+id/ps_chosen_mood_iv"
                android:layout_width="60dp"
                android:layout_height="55dp"
                android:scaleType="fitCenter"
                android:layout_marginTop="10dp"
                android:paddingBottom="10dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintVertical_bias="0.456" />

            <com.google.android.material.card.MaterialCardView
                android:id="@+id/ps_note_border_card_view"
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                app:cardCornerRadius="20dp"
                app:strokeWidth="2dp"
                app:strokeColor="@color/orange"
                app:layout_constraintTop_toBottomOf="@id/ps_chosen_mood_iv"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent">

                <TextView
                    android:id="@+id/ps_note_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="top"
                    android:padding="25dp"
                    android:textSize="15sp" />

            </com.google.android.material.card.MaterialCardView>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="30dp"
                app:layout_constraintTop_toBottomOf="@id/ps_note_border_card_view"
                app:layout_constraintStart_toStartOf="parent"
                android:text=""/>

            <com.makeramen.roundedimageview.RoundedImageView
                android:id="@+id/ps_pic_iv"
                android:layout_width="90dp"
                android:layout_height="70dp"
                android:layout_marginStart="25dp"
                android:layout_marginTop="5dp"
                android:paddingBottom="10dp"
                android:scaleType="centerCrop"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/ps_note_border_card_view"
                app:layout_constraintVertical_bias="0.0"
                app:riv_corner_radius="20dp" />

            <com.makeramen.roundedimageview.RoundedImageView
                android:id="@+id/meme_pic_iv"
                android:layout_width="90dp"
                android:layout_height="70dp"
                android:layout_marginStart="18dp"
                android:layout_marginTop="5dp"
                android:paddingBottom="10dp"
                android:scaleType="centerCrop"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.0"
                app:layout_constraintStart_toEndOf="@id/ps_pic_iv"
                app:layout_constraintTop_toBottomOf="@+id/ps_note_border_card_view"
                app:riv_corner_radius="20dp" />


        </androidx.constraintlayout.widget.ConstraintLayout>

    </androidx.cardview.widget.CardView>
</androidx.constraintlayout.widget.ConstraintLayout>